<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="columns">
      <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar sidebar-main" after="main">
          <container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
      </container>
      <container name="div.sidebars" htmlTag="div" htmlClass="sidebars" after="div.sidebar.main">
        <container name="div.sidebar.left" htmlTag="div" htmlClass="sidebar sidebar-left" before="-">
            <container name="sidebar.left" as="sidebar_left" label="Sidebar left"/>
        </container>
        <container name="div.sidebar.right" htmlTag="div" htmlClass="sidebar sidebar-right" after="div.sidebar.left">
            <container name="sidebar.right" as="sidebar_right" label="Sidebar right"/>
        </container>
      </container>
    </referenceContainer>
</layout>
